    print (Summe)
    Prozent = Summe/Anzahl;
    print (Prozent)
    Gesamtpunkte = round(Prozent*0.15);
    print(Gesamtpunkte)
    Bonuspunkte = Gesamtpunkte-5;
    print(Bonuspunkte)


